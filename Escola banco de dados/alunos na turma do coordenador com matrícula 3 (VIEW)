/* quantidade de alunos na turma do coordenador com matr√≠cula 3 */

--criei a view com o nome 'quant_alunos'
CREATE view quant_alunos as 

--selecionei as colunas 'quantidade_alunos' e 'matricula_coordenador'
SELECT quantidade_alunos, matricula_coordenador

--selecionei a tabela 'turma'
from turma 

--especifiquei a coluna 'matricula_coordenador' que seja igual a 3
WHERE matricula_coordenador = 3
